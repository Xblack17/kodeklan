@model iTut.Models.HOD.Designation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/HOD/Views/Shared/_Layout.cshtml";
}
<div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 border-bottom">
                <div class="mr-auto">
                    <h2 class="mb-2 fs-1 lh-tight"> </h2>
                    <p class="lh-tight">Staff Management</p>
                </div>
                <ul class="list-unstyled d-flex align-items-center">
                    <li class="d-lg-none mr-sm-5">
                        <button class="btn link-body p-0 offcanvas-button" type="button">
                            <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                            </svg>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <hr />
                            <div class="mr-auto">

                                <img src="~/employee34.png" alt="Sample Photo" hight="120px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="EmploymentHistories">Employment Histories</a></p>
                            </div>
                            <div class="mr-auto">

                                <img src="~/knowledge.png" alt="Sample Photo" hight="100px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="ExamTitles">Exam Titles</a></p>
                            </div>
                            <div class="mr-auto">

                                <img src="~/Session.png" alt="Sample Photo" hight="110px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="EmployeeEducations">Employee Educations</a></p>
                            </div>
                            <div class="mr-auto">

                                <img src="~/jobinfors.png" alt="Sample Photo" hight="110px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="JobInfoes">JobInfoes</a></p>
                            </div>
                            <div class="mr-auto">

                                <img src="~/employee1.png" alt="Sample Photo" hight="100px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="EducationLevels">Education Levels</a></p>
                            </div>
                            
                        </div>
                            <h1>Create</h1>

                            <h4>Designation</h4>
                            <hr />
                            <div class="row">
                                <div class="col-md-4">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-primary" />
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div>
                                <a asp-action="Index">Back to List</a>
                            </div>

                            @section Scripts {
                                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                            }
                             
                    </div>
                    <hr />
                    <div class="mr-auto">

                        <img src="~/Back.png" alt="Sample Photo" hight="120px" width="100px" />
                        <p><a asp-controller="HOD" asp-action="Index">Back To DashBoard</a></p>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
    </main>
</div>

