<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iTut</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/grayshift.css" />
    <link rel="stylesheet" href="~/css/theme.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="100vh 100vw">
            <div class="d-flex flex-column flex-lg-row">
                <partial name="_NavsidePartial" />
                <partial name="_SidebarPartial" />
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        <header>
            <nav class="navbar navbar-expand-sm bg-transparent shadow-none">
                <div class="container">
                    <a class="link-body fs-5 font-weight-bold" asp-controller="Home" asp-action="Index">
                        iTUT
                    </a>
                    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent" type="button" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle Navigation">
                        <svg class="gi gi-menu fs-5" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4 6h16a1 1 0 1 1 0 2H4a1 1 0 1 1 0-2zm0 5h16a1 1 0 1 1 0 2H4a1 1 0 1 1 0-2zm0 5h16a1 1 0 1 1 0 2H4a1 1 0 1 1 0-2z"></path>
                        </svg>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav align-items-center">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Register" asp-action="Student">Student</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Register" asp-action="Parent">Parent</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <div class="container mb-3">
            <hr style="margin-bottom: 2.5rem;" role="presentation">
            <div class="row">
                <div class="col-sm">
                    <p class="mb-3 mb-sm-0">© @DateTime.Now.Year KodeKlan</p>
                </div>
                <div class="col-sm">
                    <ul class="list-unstyled d-flex flex-wrap justify-content-sm-end">
                        <li class="mr-5">
                            <a class="link-body" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li>
                            <a class="link-body" asp-controller="Home" asp-action="Disclaimer">Disclaimer</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }
    <script src="~/lib/jQuery/js/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
