                    </li>
                </ul>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <div class="mr-auto">
                                <h2 class="mb-2 fs-2 lh-tight">Edit </h2>
                                <p>Leave Request</p>
                            </div>
                        </div>
                        
                        <hr />
                        <h4>LeaveRequestVM</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-controller="HOD" asp-action="LeaveRequestVMsEdit">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-group">
                                        <label asp-for="RequestingEmployeeId" class="control-label"></label>
                                        <input asp-for="RequestingEmployeeId" class="form-control" />
                                        <span asp-validation-for="RequestingEmployeeId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="StartDate" class="control-label"></label>
                                        <input asp-for="StartDate" class="form-control" />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="EndDate" class="control-label"></label>
                                        <input asp-for="EndDate" class="form-control" />
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="LeaveTypeId" class="control-label"></label>
                                        <select asp-for="LeaveTypeId" class="form-control" asp-items="ViewBag.LeaveTypeId"></select>
                                        <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DateRequested" class="control-label"></label>
                                        <input asp-for="DateRequested" class="form-control" />
                                        <span asp-validation-for="DateRequested" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DateActioned" class="control-label"></label>
                                        <input asp-for="DateActioned" class="form-control" />
                                        <span asp-validation-for="DateActioned" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Approved" class="control-label"></label>
                                        <input asp-for="Approved" class="form-control" />
                                        <span asp-validation-for="Approved" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ApprovedById" class="control-label"></label>
                                        <input asp-for="ApprovedById" class="form-control" />
                                        <span asp-validation-for="ApprovedById" class="text-danger"></span>
                                    </div>
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="Cancelled" /> @Html.DisplayNameFor(model => model.Cancelled)
                                        </label>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="RequestComments" class="control-label"></label>
                                        <input asp-for="RequestComments" class="form-control" />
                                        <span asp-validation-for="RequestComments" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                        <hr />
                        <div>
                            <a asp-controller="HOD" asp-action="LeaveRequestVMsIndex">Back to List</a>
                        </div>
                        <hr />
                        @section Scripts {
                            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                        }

                    </div>
                    <div class="col-12">
                        
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
