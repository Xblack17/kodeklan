@model IEnumerable<iTut.Models.HOD.Employee>

@{
    ViewData["Title"] = "Index";
}
<div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 border-bottom">
                <div class="mr-auto">
                    <h2 class="mb-2 fs-1 lh-tight"> </h2>
                    <p class="lh-tight">Staff Management</p>
                </div>
                <ul class="list-unstyled d-flex align-items-center">
                    <li class="d-lg-none mr-sm-5">
                        <button class="btn link-body p-0 offcanvas-button" type="button">
                            <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                            </svg>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <hr />
                            <div class="container">

                                <img src="~/img/HOD/employee34.png" alt="Sample Photo" hight="120px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="EmploymentHistoriesIndex">Employment Histories</a></p>
                            </div>
                            <div class="container">

                                <img src="~/img/HOD/knowledge.png" alt="Sample Photo" hight="100px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="ExamTitlesIndex">Exam Titles</a></p>
                            </div>
                            <div class="container">

                                <img src="~/img/HOD/Session.png" alt="Sample Photo" hight="110px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="EmployeeEducationsIndex">Employee Educations</a></p>
                            </div>
                            <div class="container">

                                <img src="~/img/HOD/jobinfors.png" alt="Sample Photo" hight="110px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="JobInfoesIndex">JobInfoes</a></p>
                            </div>
                            <div class="container">

                                <img src="~/img/HOD/school.png" alt="Sample Photo" hight="100px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="DesignationsIndex">Designations</a></p>
                            </div>
                            <div class="container">

                                <img src="~/img/HOD/employee1.png" alt="Sample Photo" hight="100px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="EducationLevelsIndex">Education Levels</a></p>
                            </div>
                            

                        </div>
                        <hr />
                        <div class="mr-auto">
                            <h2 class="mb-2 fs-2 lh-tight">List Of</h2>
                            <p>Employees</p>
                        <div/>
                        <hr />
                        
                        <p>
                            <a asp-controller="HOD" asp-action="EmployeesCreate">Create New</a>
                        </p>
                            <table  class="table table-striped table-dark table-hover">
                                <thead >
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FatherName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MotherName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Gender)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DOB)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaritalStatus)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Religion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nationality)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PresentAddress)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PermanentAddress)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </th>
                                    <th>Controls</th>
                                </tr>
                            </thead>
                            <tbody align="center">
                                
                        @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FatherName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MotherName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gender)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DOB)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaritalStatus)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Religion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nationality)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PresentAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PermanentAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                                <a asp-controller="HOD" asp-action="EmployeesEdit" asp-route-id="@item.Id">Edit</a> |
                                                <a asp-controller="HOD" asp-action="EmployeesDetails" asp-route-id="@item.Id">Details</a> |
                                                <a asp-controller="HOD" asp-action="EmployeesDelete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                        }
                            </tbody>
                        </table>
                        
                    </div>
                    <hr />
                    <div class="mr-auto">

                            <img src="~/img/HOD/Back.png" alt="Sample Photo" hight="120px" width="100px" />
                        <p><a asp-controller="HOD" asp-action="Index">Back To DashBoard</a></p>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
        </div>
    </main>
</div>



