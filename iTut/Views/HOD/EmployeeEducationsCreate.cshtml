@model iTut.Models.HOD.EmployeeEducation

@{
    ViewData["Title"] = "Create";
}
<div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 border-bottom">
                <span class="d-inline-flex flex-shrink-0 align-items-center justify-content-center mr-3 text-white text-uppercase bg-primary rounded-circle  wh-2-5rem">[0]</span>
                <div class="mr-auto">
                    <h2 class="mb-2 fs-1 lh-tight">Hi, </h2>
                    <p class="lh-tight">Dashboard</p>
                </div>
                <ul class="list-unstyled d-flex align-items-center">
                    <li class="d-lg-none mr-sm-5">
                        <button class="btn link-body p-0 offcanvas-button" type="button">
                            <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                            </svg>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <hr />
                            <div class="mr-auto">
                                <h2 class="mb-2 fs-2 lh-tight">Create New</h2>
                                <p>Employee Education</p>
                            </div>

                        </div>
                        <hr />
                        <h4>Employee Education</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-controller="HOD" asp-action="EmployeeEducationsCreate">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="EducationLevelId" class="control-label"></label>
                                        <select asp-for="EducationLevelId" class="form-control" asp-items="ViewBag.EducationLevelId"></select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ExamTitleId" class="control-label"></label>
                                        <select asp-for="ExamTitleId" class="form-control" asp-items="ViewBag.ExamTitleId"></select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Major" class="control-label"></label>
                                        <input asp-for="Major" class="form-control" />
                                        <span asp-validation-for="Major" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="InstituteName" class="control-label"></label>
                                        <input asp-for="InstituteName" class="form-control" />
                                        <span asp-validation-for="InstituteName" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-group">
                                            <label asp-for="ResultType" class="control-label"></label>
                                            <select asp-for="ResultType"
                                                class="form-control"
                                                asp-items="Html.GetEnumSelectList<ResultType>()">
                                            <option>Select ResultType</option>
                                        </select>
                                        <span asp-validation-for="ResultType" class="text-danger"></span>
                                        </div>
                                    <div class="form-group">
                                        <label asp-for="CGPA" class="control-label"></label>
                                        <input asp-for="CGPA" class="form-control" />
                                        <span asp-validation-for="CGPA" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Scale" class="control-label"></label>
                                        <input asp-for="Scale" class="form-control" />
                                        <span asp-validation-for="Scale" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Marks" class="control-label"></label>
                                        <input asp-for="Marks" class="form-control" />
                                        <span asp-validation-for="Marks" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PassingYear" class="control-label"></label>
                                        <input asp-for="PassingYear" class="form-control" />
                                        <span asp-validation-for="PassingYear" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Duration" class="control-label"></label>
                                        <input asp-for="Duration" class="form-control" />
                                        <span asp-validation-for="Duration" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Achievement" class="control-label"></label>
                                        <input asp-for="Achievement" class="form-control" />
                                        <span asp-validation-for="Achievement" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="EmployeeId" class="control-label"></label>
                                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div>
                            <a asp-controller="HOD" asp-action="EmployeeEducationsIndex">Back to List</a>
                        </div>

                        @section Scripts {
                            @{
                                await Html.RenderPartialAsync("_ValidationScriptsPartial");
                            }
                        }

                    </div>
                        <hr />
                    <div class="col-12">
                        <hr/>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

