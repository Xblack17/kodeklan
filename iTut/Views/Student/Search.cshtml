@model IEnumerable<iTut.Models.Coordinator.Subject>

@{
      ViewData["Title"] = "Search";
}
  <div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 border-bottom">
                <div class="mr-auto">
                    <br />

                    <p class="lh-tight"><b>Your Search results:</b></p> <!-- Html.LabelFor(s => s.NumberOfRows)-->
                </div>
                 <div class="form-group form-group-lg has-feedback">
                    <div >
                   <form  asp-action = "Search"  method = "get" >
                       <div class =" col-lg-auto">
                    <input type="search" placeholder="Search Subject" name="SearchSubject" class="form-control " value = "@ViewData["CreateSubject"]"/>
                      <span class="glyphicons glyphicons-xl glyphicons-group form-control-feedback"></span> 
                    <button type="submit" class="btn btn-success">
              <img src="https://img.icons8.com/material-outlined/24/000000/search--v1.png"/>
                </button>
                 </div>
                      </form>  
                      </div>
                <ul class="list-unstyled d-flex align-items-center">
                    <li class="d-lg-none mr-sm-5">
                        <button class="btn link-body p-0 offcanvas-button" type="button">
                            <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                            </svg>
                        </button>
                    </li>
                </ul>
            </div> 
            <br/>
          <br />
            
                <table class="table">
                   
                    @foreach (var subject in Model )
                    {
                        string selectedRow = ""; 
                    
                        if (subject.SubjectId == ViewBag.SubjectId || subject.SubjectName == ViewBag.SubjectName)
                        {
                            selectedRow = "success";

                        }
                        <tr>
                            <th>
                             @Html.DisplayFor(modelSubject => subject.SubjectId): @Html.DisplayFor(modelSubject => subject.SubjectName)
                            </th>
                            </tr>
                        <tr class="@selectedRow">
                            <td>
                                @Html.DisplayFor(modelSubject => subject.SubjectDescr)  
                            </td>
                        </tr>

                    }

                </table>