@model IEnumerable<iTut.Models.Coordinator.Subject>

@{
    ViewData["Title"] = "Subject";
}
<head>
    <div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
        <main class="main-expanded vh-100 w-100">
            <div class="container-fluid px-lg-5">
                <div class="d-flex py-5 border-bottom">
                    @*  <span class="d-inline-flex flex-shrink-0 align-items-center justify-content-center mr-3 text-white text-uppercase bg-primary rounded-circle  wh-2-5rem">@Model.Coordinator.FirstName.ToCharArray()[0]</span>
                    *@
                    <h2>Subjects</h2>
                    <ul class="list-unstyled d-flex align-items-center">
                        <li class="d-lg-none mr-sm-5">
                            <button class="btn link-body p-0 offcanvas-button" type="button">
                                <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                                </svg>
                            </button>
                        </li>
                    </ul>
                </div>

</head>
<section>
    <br />

    <div class="text-right">
      @*  <a href="/Coordinator/CreateASubject" class="btn btn-primary btn-sm justify-content-md-end ">Add Subjects</a>*@
        <a href="/Coordinator/CreateASubject" class="btn btn-primary btn-sm justify-content-md-end ">Add </a>
    </div>
    <br />
    <table class="table">
        <thead>
            <tr>
                <!--It isn't necessarry for the coordinator to see the subject number on the database but its there for data storage purposes-->
                @*<th scope="col">
                @Html.DisplayNameFor(model => model.Id)
                </th>*@
                <th scope="col">
                    @Html.DisplayNameFor(model => model.SubjectName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.SubjectDescr)
                </th>
                <th></th>
                @*<th scope="col">
                    @Html.DisplayNameFor(model => model.Created_at)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Updated_at)
                </th>*@
                <th></th>
            </tr>
        </thead>
        <br/>
        <tbody>
            @foreach (var subject in Model)
            {
                <tr>
                    @*<td width="20%">@Html.DisplayFor(modelSubject => subject.Id) </td>*@
                    <td width="30%">@Html.DisplayFor(modelSubject => subject.SubjectName) </td>
                    <td width="30%">@Html.DisplayFor(model => subject.SubjectDescr) </td>
                    <td></td>
                  @*  <td width="30%">@Html.DisplayFor(model => subject.Created_at)</td>
                    <td width="30%">@Html.DisplayFor(model => subject.Updated_at)</td>*@
                    <td>
                        <a asp-action="EditPost" asp-route-id="@subject.Id">Update</a>|
                        <a asp-action="Details" asp-route-id="@subject.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@subject.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
</main>
</div>